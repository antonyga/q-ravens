# Q-Ravens Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider API Keys (at least one required)
# =============================================================================

# Anthropic (Claude) - Recommended for complex reasoning
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI (GPT-4)
OPENAI_API_KEY=your-openai-api-key

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key

# Groq (Fast inference, free tier available)
GROQ_API_KEY=your-groq-api-key

# Azure OpenAI (Enterprise)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# =============================================================================
# Default LLM Settings
# =============================================================================

# Default provider: anthropic, openai, google, groq, azure, ollama
DEFAULT_LLM_PROVIDER=anthropic

# Default model (provider-specific)
DEFAULT_MODEL=claude-sonnet-4-20250514

# =============================================================================
# Local LLM (Ollama) - For privacy/offline use
# =============================================================================

OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# =============================================================================
# Database & Storage
# =============================================================================

# PostgreSQL (for state persistence)
DATABASE_URL=postgresql://user:password@localhost:5432/qravens

# ChromaDB (vector memory)
CHROMA_PERSIST_DIR=./data/chroma

# =============================================================================
# Observability (Optional)
# =============================================================================

# LangSmith for tracing
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=q-ravens

# =============================================================================
# Application Settings
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Max concurrent browser instances
MAX_BROWSERS=5

# Test timeout in seconds
DEFAULT_TIMEOUT=30
